{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:sonarjs/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "curly": 2,
        "quotes": [
            2,
            "double"
        ]
    }
}